<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')  %>
<body>
    
    <!--Nav imported-->
    <%- include('./partials/nav.ejs')  %> 
   
    <div>
        <h2 style="text-align: center;">All Blogs</h2>
        <div class="flexer">
           

        <% if(blogs.length > 0) { %>
        <% blogs.forEach(blog => {  %> 

        <div class="blogs">

        <a class="single" href="/blogs/<%=blog.id%>">
        <h3 class="title"><%= blog.title %> </h3>
        <p class="snippet"><%= blog.snippet %> </p>
        </a>
        </div>

        <% }) %> 
        <% } else{ %>
        <p>There is no Blog yet!</p>
         <% } %> 

        </div>
    </div>
    <%- include('./partials/footer.ejs')  %>
</body>

</html>